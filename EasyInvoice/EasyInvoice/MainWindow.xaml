<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyInvoice"
        xmlns:Custom="http://infragistics.com/Windows" xmlns:ig="http://schemas.infragistics.com/xaml" xmlns:Custom1="http://infragistics.com/Themes" x:Class="EasyInvoice.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="500">



    <DockPanel Margin="0,0,0,0" VerticalAlignment="Stretch" >
        <ToolBarPanel Height="40" VerticalAlignment="Top" DockPanel.Dock="Top"  >
            <ToolBar HorizontalAlignment="Stretch" Height="40">
                <Button Content="Button" Height="35" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.347,0.629"/>
            </ToolBar>
        </ToolBarPanel>
        <Custom:XamTabControl Margin="0,0"     >
            <TabItem Header="TabItem" Height="25" Width="60">
                <Grid Background="#FFE5E5E5">
                    <Label Content="Label" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.289,0.231" Width="70"/>
                    <TextBox Height="20" Margin="80,10,240,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top"/>
                    <Label Content="Label" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.289,0.231" Width="70"/>
                    <TextBox Height="20" Margin="80,50,240,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top"/>
                    <Label Content="Label" HorizontalAlignment="Left" Margin="10,80,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.289,0.231" Width="70"/>
                    <TextBox Height="20" Margin="80,80,240,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top"/>
                    <Label Content="Label" HorizontalAlignment="Left" Margin="10,110,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.289,0.231" Width="70"/>
                    <TextBox Height="20" Margin="80,110,240,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top"/>

                    <Label Content="Label" HorizontalAlignment="Right" Margin="10,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.289,0.231" Width="70"/>
                    <TextBox Height="20" Margin="240,10,80,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top"/>
                    <Label Content="Label" HorizontalAlignment="Right" Margin="10,50,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.289,0.231" Width="70"/>
                    <TextBox Height="20" Margin="240,50,80,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top"/>
                    <Label Content="Label" HorizontalAlignment="Right" Margin="10,80,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.289,0.231" Width="70"/>
                    <TextBox Height="20" Margin="240,80,80,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" HorizontalAlignment="Right"/>
                    <Label Content="Label" HorizontalAlignment="Right" Margin="10,110,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.289,0.231" Width="70"/>
                    <TextBox Height="20" Margin="240,110,80,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
            <TabItem Header="TabItem" Height="25" Width="60">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="TabItem" Height="25" Width="60">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </Custom:XamTabControl>


    </DockPanel>





</Window>
